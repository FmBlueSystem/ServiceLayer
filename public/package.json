{
  "name": "my-multiplatform-app",
  "version": "1.0.0",
  "description": "Cross-platform Docker application (macOS ARM64 â†’ Windows x86_64)",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config=jest.integration.config.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "docker:build": "docker build -f docker/Dockerfile -t my-app:latest .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 -f docker/Dockerfile -t my-app:latest .",
    "docker:build:mac": "docker buildx build --platform linux/arm64 -f docker/Dockerfile -t my-app:mac .",
    "docker:build:win": "docker buildx build --platform linux/amd64 -f docker/Dockerfile -t my-app:windows .",
    "docker:build:dev": "docker build -f docker/Dockerfile --target development -t my-app:dev .",
    "docker:build:prod": "docker build -f docker/Dockerfile --target production -t my-app:prod .",
    "docker:run": "docker-compose up",
    "docker:run:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:run:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:stop:clean": "docker-compose down -v --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:app": "docker-compose logs -f app",
    "docker:export": "node scripts/migrate-container.js export",
    "docker:export:win": "node scripts/migrate-container.js export --platform windows",
    "docker:export:mac": "node scripts/migrate-container.js export --platform mac",
    "docker:import": "node scripts/migrate-container.js import",
    "docker:deploy": "node scripts/migrate-container.js deploy",
    "docker:validate": "node scripts/validate-image.js",
    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -af && docker volume prune -f",
    "docker:reset": "npm run docker:stop:clean && npm run docker:clean:all",
    "setup": "npm install && npm run docker:build:dev",
    "setup:prod": "npm install --only=production && npm run docker:build:prod",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "migrate:up": "node scripts/migrate-db.js up",
    "migrate:down": "node scripts/migrate-db.js down",
    "seed:data": "node scripts/seed-db.js",
    "platform:detect": "node src/utils/platform.js",
    "platform:info": "node -e \"console.log('Platform:', process.platform, 'Arch:', process.arch)\"",
    "precommit": "npm run lint && npm run test",
    "prepare": "husky install",
    "ci": "npm run lint && npm run test && npm run docker:build",
    "ci:full": "npm run lint && npm run test && npm run test:integration && npm run docker:build:multi"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ssh2": "^1.17.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "docker",
    "multiplatform",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "cross-platform",
    "macos",
    "windows",
    "arm64",
    "x86_64"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/my-multiplatform-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/my-multiplatform-app/issues"
  },
  "homepage": "https://github.com/your-username/my-multiplatform-app#readme"
}
