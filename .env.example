# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production
PORT=3000
HTTPS_PORT=3443
HOST=0.0.0.0
ENABLE_HTTPS=true

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=myapp
POSTGRES_USER=myapp_user
POSTGRES_PASSWORD=your_database_password_here
ALLOW_START_WITHOUT_DATABASE=false

# SAP Service Layer Configuration
SAP_ENDPOINT=https://your-sap-server:50000/
SAP_COMPANY_DB=YOUR_COMPANY_DB

# Application Configuration
APP_DISPLAY_NAME=SAP Service Layer - BlueSystem
APP_VERSION=1.0.0

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_RENEWAL_ENABLED=true

# SSH Configuration (if needed)
WINDOWS_SSH_PASSWORD=your_ssh_password_here

# CORS Configuration
CORS_ORIGIN=https://your-domain:3443
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Redis Configuration
DISABLE_REDIS=true

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
API_RATE_LIMIT_MAX=50000

# Whitelist de IPs internas (separadas por comas)
RATE_LIMIT_WHITELIST=127.0.0.1,::1,localhost

# Rangos de red permitidos (formato CIDR)
RATE_LIMIT_TRUSTED_NETWORKS=10.0.0.0/8,192.168.0.0/16,172.16.0.0/12

# GitHub Configuration (for deployments)
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name
